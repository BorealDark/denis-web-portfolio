---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { t } from "../i18n";
import "../styles/global.css";

type Props = {
  title: string;
  description: string;
  noTopPadding?: boolean;
  snap?: boolean;
};

const { title, description, noTopPadding = false, snap = false } = Astro.props;
const dict = t("es");

const fullTitle = `${title} | ${dict.site.name}`;
const canonical = new URL(Astro.url.pathname, Astro.site);
---
<!doctype html>
<html lang="es" class:list={[snap ? "snap-y snap-proximity" : null]}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical.toString()} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical.toString()} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-dvh bg-antracita text-roto antialiased">
    <a
      href="#contenido"
      class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-white focus:px-3 focus:py-2 focus:text-sm focus:shadow"
    >
      Saltar al contenido
    </a>

    <div class="mx-auto flex min-h-dvh max-w-6xl flex-col px-4">
      <div class="relative flex min-h-dvh flex-col">
        <div class="absolute inset-x-0 top-0 z-20">
          <Header />
        </div>
        <main id="contenido" class:list={["flex-1", noTopPadding ? "pt-0" : "pt-24"]}>
          <slot />
        </main>
        <Footer />
      </div>
    </div>

    <script is:inline>
      // Reveal on scroll (sin dependencias). Usa `data-reveal` y opcionalmente `data-delay="150"`.
      const els = document.querySelectorAll("[data-reveal]");
      if (els.length) {
        const io = new IntersectionObserver(
          (entries) => {
            for (const entry of entries) {
              if (entry.isIntersecting) {
                entry.target.classList.add("is-visible");
                io.unobserve(entry.target);
              }
            }
          },
          { threshold: 0.15 }
        );

        for (const el of els) {
          const delay = el.getAttribute("data-delay");
          if (delay) el.style.transitionDelay = `${delay}ms`;
          io.observe(el);
        }
      }

      // Nota: efecto 3D eliminado. La galeria usa lightbox (click) en su lugar.
    </script>
  </body>
</html>
