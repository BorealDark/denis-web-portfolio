---
import type { PortfolioItem } from "../data/portfolio";

type Props = {
  items: PortfolioItem[];
};

const { items } = Astro.props;
---
<section aria-label="Galeria de bodas" class="mt-8">
  <ul class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {items.map((item, idx) => (
      <li
        class:list={[
          "group overflow-hidden rounded-2xl border border-antracita bg-antracita/60 shadow-[0_1px_0_rgba(255,255,255,0.04)]",
          // Hero tile para bodas (desktop)
          idx === 0 ? "lg:col-span-2 lg:row-span-2" : null
        ]}
      >
        <button
          type="button"
          class="relative block w-full text-left"
          aria-label="Abrir imagen"
          data-gallery-open
          data-index={idx}
        >
          <div class:list={["relative bg-carbon", idx === 0 ? "aspect-[16/10]" : "aspect-[4/3]"]}>
            <img
              src={item.src}
              alt={item.alt}
              loading="lazy"
              class="h-full w-full object-cover transition duration-300 group-hover:scale-[1.02]"
            />
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/25 to-transparent opacity-0 transition group-hover:opacity-100"></div>
          </div>
        </button>
      </li>
    ))}
  </ul>
</section>

